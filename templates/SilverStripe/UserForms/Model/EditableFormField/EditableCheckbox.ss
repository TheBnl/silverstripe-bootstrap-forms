<div class="$Class form-check">
    <input id="$ID" class="form-check-input checkbox" name="$Name" type="checkbox" value="$Value"<% if $Required %> required="required"<% end_if %><% if $isChecked %> checked="checked"<% end_if %><% if $isDisabled %> disabled="disabled"<% end_if %> />
    <label class="form-check-label" for="$ID">$Title</label>
</div>
